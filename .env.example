# Copy this file to .env and fill in your actual values

# ─── LLM ─────────────────────────────────────────────────────
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here   # used for embeddings fallback

# ─── Model ───────────────────────────────────────────────────
MODEL_NAME=claude-sonnet-4-5
MAX_TOKENS=2048
TEMPERATURE=0.2

# ─── ChromaDB ────────────────────────────────────────────────
CHROMA_HOST=chroma          # use "localhost" for local dev without Docker
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=./chroma_db

# ─── RAG ─────────────────────────────────────────────────────
TOP_K_CHUNKS=5
EMBEDDING_MODEL=text-embedding-3-small

# ─── Session ─────────────────────────────────────────────────
ACTIVE_PLUG=engineering_sme
SESSION_TTL_SECONDS=3600

# ─── Logging ─────────────────────────────────────────────────
LOG_LEVEL=INFO
